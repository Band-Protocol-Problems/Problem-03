{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "src/examples/node/index.ts",
    "src/examples/react"
  ],
  "exclude": ["node_modules", "dist"]
}
